@{
    Layout = "_Layout.cshtml";
}
@section header
{
    <div class="row bg-primary">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12"><h1>Inventory Management</h1></div>
            </div>
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-4 col-sm-6">
                        <a class="btn btn-default" asp-controller="Inventory" asp-action="Index">List Items</a>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <a class="btn btn-default" asp-controller="Inventory" asp-action="Create">Add New Item</a>
                    </div>
                    <div class="col-md-3 col-md-offset-0 col-sm-6 col-sm-offset-3">
                        <a class="btn btn-default" asp-controller="Inventory" asp-action="About">About Us</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@RenderBody()