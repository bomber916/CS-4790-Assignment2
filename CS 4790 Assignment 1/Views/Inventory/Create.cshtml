@model CS_4790_Assignment_1.Models.InventoryItem

@{
    ViewData["Title"] = "AddItem";
    Layout = "~/Views/Shared/_Header.cshtml";
}

<h2>Add New Item</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Description" class="col-sm-2 control-label"></label>
            <input asp-for="Description" class="form-control limit-width" />
        </div>
        <div class="form-group">
            <label asp-for="NumInStock" class="col-sm-2 control-label"></label>
            <input asp-for="NumInStock" class="form-control limit-width" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-sm-2 control-label"></label>
            <input asp-for="Price" class="form-control limit-width" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="col-md-offset-2 btn btn-primary" />
        </div>
    </div>
</form>
